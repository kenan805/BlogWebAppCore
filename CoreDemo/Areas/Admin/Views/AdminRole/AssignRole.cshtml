@model List<RoleAssignViewModel>
@{
	ViewData["Title"] = "AssignRole";
	Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
	@for (var i = 0; i < Model.Count(); i++)
	{
		<div class="form-check">
			<input type="hidden" asp-for="@Model[i].RoleID" />
			<input type="hidden" asp-for="@Model[i].Name" />
			<label class="form-check-label" for="@Model[i].Exists">
				<input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />@Model[i].Name
			</label>
		</div>
	}
	<br />
	<button class="btn btn-info">Dəyişiklikləri yadda saxla</button>
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary">Istifade siyahisina qayit</a>

