@model List<Message2>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
	<h6 class="p-3 mb-0">Mesajlar</h6>
	<div class="dropdown-divider"></div>
	@foreach (var item in Model.Where(x=>x.MessageStatus).OrderByDescending(x=>x.MessageDate))
	{
		<a class="dropdown-item preview-item">
			<div class="preview-thumbnail">
				<img src="@item.SenderWriter.WriterImage" alt="image" class="profile-pic">
			</div>
			<div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
				<h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderWriter.WriterName sənə mesaj göndərdi</h6>
				<p class="text-gray mb-0"> @CalculateBetweenAgoDatetime.GetDifferenceMessage(@item.MessageDate) </p>
			</div>
		</a>
	}
	<h6 class="p-3 mb-0 text-center">@Model.Count yeni mesaj</h6>
</div>